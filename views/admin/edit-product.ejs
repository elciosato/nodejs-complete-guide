<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/product.css">
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

      <main>
        <form class="product-form" action="<% if (editing) { %>/admin/edit-product<% } else { %>/admin/add-product<% } %>" method="POST">
          <div class="form-control">
            <input type="hidden" name="id" id="id" value="<%= editing ? product._id : null %>">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%= editing ? product.title : null %>">
          </div>
          <div class="form-control">
            <label for="imageUrl">Image URL</label>
            <input type="text" name="imageUrl" id="imageUrl" value="<%= editing ? product.imageUrl : null %>">
          </div>
          <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" step="0.01" value="<%= editing ? product.price : null %>">
          </div>
          <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="5"><%= editing ? product.description : null %></textarea>
          </div>

          <button class="btn" type="submit"><% if (editing) { %>Save<% } else { %>Add Product<% } %></button>
        </form>
      </main>
      <%- include('../includes/end.ejs') %>